---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";
import CoverShuffle from "../assets/cover-shuffle.png";
---

<Layout title="Wilkommen zum Cover Shuffle">
  <div class="container">
    <Picture class="cover" src={CoverShuffle} formats={["avif", "webp"]} alt="" />
    <div class="introText">Haben Sie das Zeug zum Plattensammler & Coverlover?</div>
    <a class="button" href="/shuffle">Jetzt loslegen</a>
  </div>
</Layout>

<style>
  .container {
    position: relative;
  }

  .cover {
    width: 100%;
    height: auto;
  }

  .introText {
    position: absolute;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    right: 50%;
    text-align: center;
    width: 75%;
  }

  .button {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 128px;
    background: #ffe500;
    height: 40px;
    width; auto;
    padding: 12px 24px;
    text-decoration: none;
    color: #1a0e38;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
