---
import { Picture } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Shared/Button.astro";
import IntroText from "../../components/Shared/IntroText.astro";
import categories from "../../json/categories.json";

const { category } = Astro.params;

const currentCategory = categories.find((cat: any) => cat.slug === category);

if (!currentCategory) {
  return Astro.redirect("/404");
}
---

<Layout title="Kategorie Start">
  <div slot="left-headercol"></div>

  <IntroText headline={`${currentCategory?.name} gewÃ¤hlt!`} subline={currentCategory?.introSubline} />

  <div class="category">
    <div class="cover">
      <Picture
        src={currentCategory?.categoryImage as string}
        width={240}
        height={240}
        formats={["avif", "webp"]}
        alt=""
      />
    </div>
    <div class="categoryHeadline">{currentCategory?.categoryHeadline}</div>
    <div class="text">
      {currentCategory?.categoryText}
    </div>
  </div>

  <div class="centerButton">
    <Button buttonText="weiter" url="/rounds/round-one" />
  </div>
</Layout>

<style>
  .introText {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-15);
    margin-bottom: var(--spacing-spacing-md);
  }

  .headline {
    color: var(--colour-text-primary);
    leading-trim: both;
    text-edge: cap;
    font-size: 24px;
    font-style: normal;
    font-weight: 900;
    line-height: 120%; /* 28.8px */
    letter-spacing: 0.36px;
  }

  .subline {
    color: var(--colour-text-secondary, #aeaeae);
    leading-trim: both;
    text-edge: cap;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
  }

  .category {
    display: flex;
    padding: var(--spacing-spacing-s) var(--spacing-spacing-s) var(--spacing-spacing-md) var(--spacing-spacing-s);
    flex-direction: column;
    gap: var(--spacing-spacing-md);
    border-radius: var(--radius-radius-rounded);
    background: var(--colour-BG-secondary);
  }

  .cover {
    margin: 0 auto;
  }

  .categoryHeadline {
    color: var(--colour-text-primary);
    leading-trim: both;
    text-edge: cap;
    font-style: normal;
    font-weight: 700;
    line-height: 120%;
  }

  .text {
    color: var(--colour-text-primary);
    leading-trim: both;
    text-edge: cap;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
  }

  .centerButton {
    display: flex;
    justify-content: center;
    margin-top: var(--spacing-spacing-md);
  }
</style>

<script>
  import { resetLocalStorage } from "../../utils/resetLocalStorage";

  window.addEventListener("load", function () {
    // Reset the local storage
    resetLocalStorage();
  });
</script>
